<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RentACar</title>
    <link rel="stylesheet" type="text/css" href="/public/styles/css/style.css" />
    <link rel="icon" href="/public/styles/favicon.ico" />
</head>
</body class="preload">
    <header>
        <nav>
            <img id="logo" src="/public/styles/logo.png" alt="logo"/>
            <ul id="main-nav">
                <li><a href="/">home</a></li>
                <li><a href="/cars/all">all cars</a></li>
                <li><a href="/cars/create">add car</a></li>
                <li><a href="/users/profile/me">profile</a></li>
            </ul>
            <ul id="user">
            {{#if user}}
                <span>{{user.username}}</span>
                <li><a href="/users/logout">logout</a></li>
            {{else}}
                <li><a href="/users/register">register</a></li>
                <li><a href="/users/login">login</a></li>
            {{/if}}
            </ul>
        </nav>
    </header>
            {{#if error}}
                <h2 class="error">{{error}}</h2>
            {{else if success}}
            <h2 class="success">Success Login</h2>
            {{/if}}

            {{#if data.error}}
                <h2 class="error">{{data.error}}</h2>
            {{else if data.success}}
            <h2 class="success">{{data.success}}</h2>
            {{/if}}
    <section id="main-container">
        <main>
          {{{body}}}
        </main>
    </section>
    <footer>
        <span>Authentication exercise</span>
    </footer>
    <script>
        document.onload = function() {
            document
                .querySelector('body')
                .classList
                .remove('preload');
        }
    </script>
</body>
</html>