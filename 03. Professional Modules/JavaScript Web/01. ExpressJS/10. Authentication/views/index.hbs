<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>
        body {
            padding: 20px;
        }
        .product {
            border: 1px solid black;
            display: inline-block;
            padding: 5px;
            margin: 10px;
        }
        .message {
            display: inline-block;
            background-color: aqua;
            position: absolute;
            right: 20px;
            top: 20px;
        }
    </style>
</head>

<body>
    {{#if message}}
    <div class="message">{{message}}</div>
    {{/if}}
    <h1>Welcom to Shop</h1>
    <h3>Hello, {{username}}</h3>
    <h3>Items in cart: {{numItems}}</h3>
    <a href="/cart">Checkout</a>
    &nbsp;
    <a href="/readSession">Read Session</a>
    <div>
        {{#each products}}
        <div class="product">
            <h3>{{name}}</h3>
            <p>Price: {{price}}</p>
            <a href="/add/{{@index}}">Add to cart</a>
        </div>
        {{/each}}
    </div>
</body>

</html>