<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>
        body {
            padding: 20px;
        }
        .product {
            border: 1px solid black;
            display: inline-block;
            padding: 5px;
            margin: 10px;
        }
    </style>
</head>

<body>
    <h1>Your cart</h1>
    <h3>Items in cart: {{{numItems}}}</h3>
    <a href="/">Continue Shopping</a>
    &nbsp;
    <a href="/readSession">Read Session</a>
    <div>
        {{#each items}}
        <div class="product">
            <h3>{{name}}</h3>
            <p>Price: {{price}}</p>
            <a href="/remove/{{@index}}">Remove</a>
        </div>
        {{/each}}
    </div>
    <h3>Total: {{total}}</h3>
</body>

</html>