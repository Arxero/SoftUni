 <h1>Welcome to SoftUni Wiki!</h1>
                <section id="featured">
                    <h2>Latest article</h2>
                    <article>
                        <h3>{{title}}</h3>
                        <p>
                           {{content}}
                        </p>
                        <div class="controls">
                            <a href="view/article/{{id}}">Read more</a>
                        </div>
                    </article>
                </section>
                <section id="recent">
                    <h2>Recently added articles</h2>
                    <ul>
                         {{#each allArticles}}
                            <li>
                                <a href="view/article/{{this._id}}">{{this.title}}</a>
                            </li>
                        {{/each}}
                    </ul>
                </section>